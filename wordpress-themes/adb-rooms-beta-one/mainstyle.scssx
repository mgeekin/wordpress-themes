#header,
.header {

    display               : grid;
    grid-gap              : 1em;
    grid-template-columns : 1fr 1fr 1fr;
    position              : sticky;
    top                   : 0px;
    min-height            : var(--headerHeight, 3em);
    // background-color: #fff;
    color                 : #222;
    // flex-direction     : row;
    // justify-content    : space-between;
    // align-items        : center;
    padding               : 0 1em;
    z-index               : 1000;
    font-weight           : 700;
    border-bottom         : 1px solid #ccc;
    background-color      : hsl(var(--hue, 335), 20%, 95%);
    box-shadow            : 2px 0px 4px gray;

    text-transform: capitalize;


    #logo {
        height: 1.5em;
    }


    // search

    .search {
        font-size      : .9em;
        width          : 450px;
        display        : flex;
        justify-content: center;
        align-self     : center;

        .search-block {
            width                   : 100%;
            // display              : grid;
            // grid-gap             : 1em;
            // grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));

            border       : 1px solid #ccc;
            border-radius: 2em;

            search-block-items {
                display: inline-block;
                padding: 1em;
                margin : 0 auto;
            }
        }

    }

}










//HomepageLayout

.postgrid {
    display              : grid;
    grid-gap             : 2em;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    padding              : 4em;


    .postgrid-item {
        position: relative;

        border-radius   : .5em;
        box-shadow      : 1px 1px 10px black;
        background-color: hsla(var(--hueAscent), var(--satAscent), var(--lightAscent), .02);

        transition: all .3s ease-in-out;

        &:hover {
            transform: scale(1.02);
            filter   : brightness(1.2);
        }

        .postgrid-item-image {
            position : relative;
            overflow : hidden;
            max-width: 100%;
            height   : 200px;

            img {
                object-fit   : cover;
                max-width    : 100%;
                border-radius: .5em .5em 0 0;

            }
        }

        .postgrid-item-content {
            padding: .5em;

            .postgrid-cost {
                display    : block;
                font-weight: 700;
            }
        }

        .postgrid-item-title {
            color     : #555;
            font-style: normal;
        }
    }
}